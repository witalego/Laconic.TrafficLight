<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-autowire="constructor">
    <bean id="trafficLightMainSettings" class="com.localhost.teamcity.trafficLightPlugin.config.TrafficLightMainSettings"/>
    <bean id="trafficLightMainConfigProcessor" class="com.localhost.teamcity.trafficLightPlugin.config.TrafficLightMainConfigProcessor" init-method="register"/>

    <bean id="trafficLightListener" class="com.localhost.teamcity.trafficLightPlugin.TrafficLightServer" init-method="register" />
    <bean id="trafficLightAdminPage" class="com.localhost.teamcity.trafficLightPlugin.ui.admin.TrafficLightSettingsAdminPage" />
    <bean id="trafficLightSettingsController" class="com.localhost.teamcity.trafficLightPlugin.ui.admin.TrafficLightSettingsController" />
</beans>